{
    "extends": [
        "next/core-web-vitals",
        "next/typescript",
        "prettier",
        "plugin:prettier/recommended"
    ],
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": true,
                "trailingComma": "all",
                "printWidth": 100,
                "tabWidth": 4
            }
        ]
    }
}
